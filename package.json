{
  "name": "roadmap-nextjs-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.development -- next dev",
    "dev:prod": "NODE_ENV=production dotenv -e .env.production -- next dev",
    "build": "prisma generate && next build",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "start": "start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:migrate": "NODE_ENV=development dotenv -e .env.development -- prisma migrate dev --name init",
    "db:migrate:prod": "NODE_ENV=production dotenv -e .env.production -- prisma migrate dev --name init",
    "db:deploy": "NODE_ENV=development dotenv -e .env.development -- prisma migrate deploy",
    "db:deploy:prod": "NODE_ENV=production dotenv -e .env.production -- prisma migrate deploy",
    "db:studio": "prisma studio",
    "setup:admin": "NODE_ENV=development dotenv -e .env.development -- tsx scripts/setup-admin.ts",
    "setup:admin:prod": "NODE_ENV=production dotenv -e .env.production -- tsx scripts/setup-admin.ts"
  },
  "dependencies": {
    "@daveyplate/better-auth-ui": "^3.3.15",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4.1.18"
  }
}
